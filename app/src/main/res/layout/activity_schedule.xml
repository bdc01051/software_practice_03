<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.jiwon_hae.software_practice.schedule.schedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/main_color"></LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5mm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/application_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:background="@color/transparent"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8mm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="7mm"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/schedule_linearlayout_design"
                    android:paddingLeft="2mm"
                    android:paddingRight="2mm">

                    <ImageView
                        android:id="@+id/schedule_title_icon"
                        android:layout_width="5mm"
                        android:layout_height="5mm"
                        android:background="@color/transparent"/>

                    <Space
                        android:layout_width="2mm"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:textColor="#000000"
                        android:textSize="11dp"
                        android:gravity="center_vertical"
                        android:text="title of the schedule"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="2mm" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="7mm"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/schedule_linearlayout_design"
                    android:paddingLeft="2mm"
                    android:paddingRight="2mm">

                    <ImageView
                        android:id="@+id/schedule_lock_icon"
                        android:layout_width="5mm"
                        android:layout_height="5mm"
                        android:background="@color/transparent"/>
                    
                    <Space
                        android:layout_width="2mm"
                        android:layout_height="match_parent" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="8 digits code"
                        android:textColorHint="@color/light_gray"
                        android:textColor="#000000"
                        android:textSize="11dp"
                        android:lines="1"
                        android:inputType="textPassword"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12mm" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="8mm"
                    android:text="CREATE SCHEDULE"
                    android:textColor="@color/white"
                    android:onClick="to_schedule_register"
                    android:background="@drawable/create_schedule_btn" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiwon_hae.software_practice.tmap.map_navigation"
    android:orientation="vertical">

    <fragment
        android:id="@+id/mapView"
        class="com.google.android.gms.maps.SupportMapFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0.5mm"
        android:layout_gravity="bottom|left"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/walking_nav_btn"
            android:layout_width="7mm"
            android:layout_height="7mm"
            android:textOn = ""
            android:textOff = ""
            android:background="@drawable/navigation_walk_toggle_btn" />

        <Space
            android:layout_width="2mm"
            android:layout_height="match_parent" />

        <ToggleButton
            android:id="@+id/car_nav_btn"
            android:layout_width="7mm"
            android:layout_height="7mm"
            android:textOn = ""
            android:textOff = ""
            android:background="@drawable/navigation_car_toggle_btn"/>

    </LinearLayout>


</FrameLayout>
